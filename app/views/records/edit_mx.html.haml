.container.main-container
  .row
    %main.col-md-9
      %header
        %h1 Records#edit
      %section
        = form_for @record, url: record_path(@record) do |f|
          %table.table
            %thead
              %tr
                %th{colspan: 2} Record
                %th Value
                %th TTL (seconds)
                %th Active
                %th Priority
                %th
            %tbody
              - @records.each do |record|
                - if record == @record
                  %tr
                    %td{colspan: 2}
                      .form-group
                        = f.label :name, class: 'sr-only'
                        .input-group
                          .input-group-addon= @record.type_s
                          = f.text_field :name, class: 'form-control', placeholder: 'Name'
                        = error_block @record, :name
                    %td
                      .form-group
                        = f.label :value, class: 'sr-only'
                        = f.text_field :value, class: 'form-control', placeholder: 'Value'
                        = error_block @record, :value
                    %td
                      .form-group
                        = f.label :ttl_seconds, class: 'sr-only'
                        = f.number_field :ttl_seconds, class: 'form-control', placeholder: 'TTL (seconds)', min: 0, step: 60
                        = error_block @record, :ttl_seconds
                    %td
                      .form-group
                        = f.label :active, class: 'sr-only'
                        = f.check_box :active
                        = error_block @record, :active
                    %td
                      .form-group
                        = f.label :priority, class: 'sr-only'
                        = f.number_field :priority, class: 'form-control', placeholder: 'Priority', min: 0, step: 10
                        = error_block @record, :priority
                    %td
                      = f.submit 'Update', class: %w(btn btn-primary)
                - else
                  = render record, record: record
